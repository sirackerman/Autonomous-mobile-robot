<?xml version="1.0"?>
<launch>
  <!-- Load controller configurations -->
  <rosparam file="$(find ros_mobile_robot)/config/joint_state_controller.yaml" command="load"/>
  <rosparam file="$(find ros_mobile_robot)/config/diffdrive_controller.yaml" command="load"/>

  <!-- Start controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" 
        args="joint_state_controller mobile_base_controller" output="screen">
	<remap from="mobile_base_controller/cmd_vel" to="/cmd_vel"/>
	<remap from="/mobile_base_controller/odom" to="/odom"/>

  </node>

  <!-- Robot state publisher -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen">
    <param name="publish_frequency" type="double" value="50.0" />
  </node>

	 <!-- TF maintenance -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_odom" 
        args="0 0 0 0 0 0 map odom" />

</launch>
